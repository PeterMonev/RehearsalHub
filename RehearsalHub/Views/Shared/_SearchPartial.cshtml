@{
    string? currentSearch = ViewData["CurrentSearch"]?.ToString();
}

<div class="row mb-4">
    <div class="col-lg-6 mx-auto">
        <form method="get">
            <div class="input-group shadow-sm rounded-pill overflow-hidden border bg-white">
                <span class="input-group-text bg-white border-0 ps-3">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="text" name="searchTerm" value="@currentSearch"
                       class="form-control border-0 py-2 shadow-none"
                       placeholder="Search...">

                @if (!string.IsNullOrEmpty(currentSearch))
                {
                    <a asp-action="@ViewContext.RouteData.Values["action"]"
                       class="btn btn-white border-0 d-flex align-items-center text-muted px-3">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }

                <button type="submit" class="btn btn-primary px-4 fw-bold">Search</button>
            </div>
        </form>
    </div>
</div>