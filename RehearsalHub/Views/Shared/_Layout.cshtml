<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RehearsalHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.min.css">
</head>
<body>

    <div id="tempdata-container"
         data-success="@TempData["SuccessMessage"]"
         data-error="@TempData["ErrorMessage"]"
         style="display:none;">
    </div>

    <div id="signalr-config"
         data-hub-url="@Url.Content("~/notificationsHub")"
         data-invitation-url="@Url.Action("Index", "Invitations")"
         style="display:none;">
    </div>

    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark-glass border-bottom border-danger border-2 py-2">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <div class="logo-icon bg-danger text-white rounded-3 px-2 shadow-danger">
                        <i class="fa-solid fa-guitar"></i>
                    </div>
                    <span class="fw-black tracking-tight text-white">REHEARSAL<span class="text-danger">HUB</span></span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom px-lg-3" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom px-lg-3 text-info-hover" asp-controller="Bands" asp-action="Index">My Bands</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom px-lg-3 text-warning-hover" asp-controller="Songs" asp-action="Index">Songs</a>
                            </li>
                            <li class="nav-item mt-2 mt-lg-0 ms-lg-2">
                                <a class="btn btn-danger btn-sm rounded-pill px-4 fw-bold shadow-danger-sm" asp-controller="Bands" asp-action="Create">
                                    <i class="fa-solid fa-plus me-1"></i> Add Band
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-3 py-2 py-lg-0 border-top border-secondary border-lg-0 mt-3 mt-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="dropdown">
                                <a class="nav-link p-2 position-relative text-white opacity-75 hover-opacity-100 transition-all" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-bell fs-5"></i>
                                    <span id="notification-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none border border-dark" style="font-size:0.55rem; padding: 0.35em 0.5em;">0</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-xl border-secondary mt-3 animate slideIn" style="width:300px;">
                                    <li><h6 class="dropdown-header fw-bold text-uppercase small">Invitations</h6></li>
                                    <li><hr class="dropdown-divider bg-secondary"></li>
                                    <li id="notifications-wrapper" class="py-2">
                                        <a class="dropdown-item text-muted text-center py-3">
                                            <i class="fa-solid fa-spinner fa-spin me-2"></i>Loading...
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider bg-secondary"></li>
                                    <li>
                                        <a class="dropdown-item text-center fw-bold text-danger py-2" asp-controller="Invitations" asp-action="Index">
                                            Open Invitation Center 🎸
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }

                        <div class="login-wrapper text-white">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-5 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase fw-bold mb-4" style="color: #e63946;">RehearsalHub 🎸</h5>
                    <p class="text-secondary">The ultimate tool for bands and musicians. Organize your sound, manage your rehearsals, and never miss a beat.</p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-white opacity-75 hover-opacity-100"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-white opacity-75 hover-opacity-100"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-white opacity-75 hover-opacity-100"><i class="bi bi-youtube fs-5"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0 ms-lg-auto">
                    <h6 class="text-uppercase fw-bold mb-4">Explore</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a asp-controller="Songs" asp-action="Index" class="text-secondary text-decoration-none hover-red">Song Library</a></li>
                        <li class="mb-2"><a asp-controller="Bands" asp-action="Index" class="text-secondary text-decoration-none hover-red">Bands</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h6 class="text-uppercase fw-bold mb-4">Legal</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="text-secondary text-decoration-none hover-red">Privacy Policy</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="TermsOfUse" class="text-secondary text-decoration-none hover-red">Terms of Use</a></li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 opacity-25">

            <div class="row align-items-center">
                <div class="col-md-12 text-center small text-secondary">
                    &copy; @DateTime.Now.Year **RehearsalHub** Peter Monev. Built for musicians by musicians. 🤘
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.all.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site-confirm.js" asp-append-version="true"></script>
    <script src="~/js/site-messages.js" asp-append-version="true"></script>
    <script src="~/js/site-search.js" asp-append-version="true"></script>
    <script src="~/js/site-search-addsong.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>