@using Microsoft.AspNetCore.Identity
@using RehearsalHub.Web.ViewModels
@using RehearsalHub.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center gap-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-white hover-red" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-circle-user fs-5 text-danger"></i>
                <span class="fw-bold">@User.Identity?.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2 animate slideIn" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item py-2" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear-fill me-2 text-secondary"></i> Settings
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item text-danger py-2">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-medium px-3 hover-red" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-danger rounded-pill px-4 fw-bold shadow-danger-sm ms-lg-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>