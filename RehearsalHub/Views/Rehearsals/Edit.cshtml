@model RehearsalInputModel

@{
    ViewData["Title"] = "Edit Rehearsal";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-warning text-dark p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-pen-to-square fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="mb-0 fw-bold">Edit Rehearsal</h2>
                            @if (!string.IsNullOrEmpty(Model.BandName))
                            {
                                <p class="mb-0 opacity-75">
                                    <small>@Model.BandName</small>
                                </p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BandId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

               
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-dark">
                                <i class="fa-solid fa-heading text-warning me-2"></i>Rehearsal Name
                            </label>
                            <input asp-for="Name"
                                   class="form-control form-control-lg border-2 rounded-3"
                                   placeholder="e.g., Pre-Gig Rehearsal"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                   
                        <div class="row g-3 mb-4">
                   
                            <div class="col-md-6">
                                <label asp-for="StartRehearsal" class="form-label fw-bold text-dark">
                                    <i class="fa-solid fa-clock text-success me-2"></i>Start Date & Time
                                </label>
                                <input asp-for="StartRehearsal"
                                       type="datetime-local"
                                       class="form-control form-control-lg border-2 rounded-3" />
                                <span asp-validation-for="StartRehearsal" class="text-danger small"></span>
                            </div>

                       
                            <div class="col-md-6">
                                <label asp-for="EndRehearsal" class="form-label fw-bold text-dark">
                                    <i class="fa-solid fa-clock text-danger me-2"></i>End Date & Time
                                </label>
                                <input asp-for="EndRehearsal"
                                       type="datetime-local"
                                       class="form-control form-control-lg border-2 rounded-3" />
                                <span asp-validation-for="EndRehearsal" class="text-danger small"></span>
                            </div>
                        </div>

                     
                        <div class="mb-4">
                            <label asp-for="SetlistId" class="form-label fw-bold text-dark">
                                <i class="fa-solid fa-compact-disc text-success me-2"></i>Setlist (Optional)
                            </label>
                            <select asp-for="SetlistId" class="form-select form-select-lg border-2 rounded-3">
                                <option value="">-- No Setlist --</option>
                                @foreach (var setlist in Model.AvailableSetlists)
                                {
                                    <option value="@setlist.Id">@setlist.Name (@setlist.SongsCount songs)</option>
                                }
                            </select>
                            <div class="form-text">
                                <i class="fa-solid fa-info-circle me-1"></i>
                                Update the setlist for this rehearsal or leave empty
                            </div>
                        </div>

                
                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold text-dark">
                                <i class="fa-solid fa-sticky-note text-warning me-2"></i>Notes (Optional)
                            </label>
                            <textarea asp-for="Notes"
                                      class="form-control border-2 rounded-3"
                                      rows="4"
                                      placeholder="Add any notes about this rehearsal..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                       
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill flex-grow-1 fw-bold shadow text-dark">
                                <i class="fa-solid fa-check me-2"></i>Save Changes
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id"
                               class="btn btn-outline-secondary btn-lg rounded-pill px-4 fw-bold">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
