@model SetlistDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">

    <div class="card border-0 shadow-lg rounded-5 mb-5 overflow-hidden">
        <div class="card-body p-5 bg-animated-gradient text-white position-relative">
            <div class="row align-items-center g-4">

                <div class="col-lg-8">

                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb mb-0 opacity-75 small">
                            <li class="breadcrumb-item">
                                <a href="/Bands/Details/@Model.BandId" class="text-white text-decoration-none">
                                    <i class="fa-solid fa-users me-1"></i> @Model.BandName
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-white fw-bold" aria-current="page">Setlist Details</li>
                        </ol>
                    </nav>

                    <div class="d-flex align-items-center mb-4 flex-wrap">
                        <div>
                            <h1 class="mb-1 fw-black display-4">@Model.Name</h1>
                            <p class="mb-0 fs-5 opacity-75">
                                <span class="badge bg-success rounded-pill px-3">Live Setlist</span>
                            </p>
                        </div>
                    </div>

                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <div class="stat-card">
                            <i class="fa-solid fa-music me-2 text-warning"></i>
                            <span><strong>@Model.TotalSongs</strong> Tracks</span>
                        </div>
                        <div class="stat-card">
                            <i class="fa-solid fa-clock me-2 text-info"></i>
                            <span><strong>@Model.TotalDuration</strong> Total Time</span>
                        </div>
                        @if (Model.RehearsalDate.HasValue)
                        {
                            <div class="stat-card">
                                <i class="fa-solid fa-calendar-check me-2 text-danger"></i>
                                <span>@Model.RehearsalDate.Value.ToString("MMM dd, HH:mm")</span>
                            </div>
                        }
                    </div>

                </div>

                <div class="col-lg-4 mt-4 mt-lg-0 text-lg-end">
                    @if (Model.CanEdit)
                    {
                        <div class="d-flex flex-column gap-3">
                            <a asp-action="AddSongs" asp-route-id="@Model.Id"
                               class="btn btn-light btn-lg rounded-pill fw-bold shadow-sm hover-scale py-3">
                                <i class="fa-solid fa-circle-plus me-2 text-success"></i>Add New Songs
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id"
                                   class="btn btn-edit-glass rounded-pill flex-grow-1 fw-bold hover-scale">
                                    <i class="fa-solid fa-sliders me-2"></i>Configure
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <button type="button"
                                            class="btn btn-delete-glass rounded-pill fw-bold w-100 hover-scale px-4"
                                            onclick="confirmDelete('deleteForm', 'Delete this entire setlist?', 'Danger Zone')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-end mb-4 px-2">
        <div>
            <h2 class="fw-black mb-0">Tracklist 🎸</h2>
            <p class="text-muted mb-0 small">Drag and drop to reorder (coming soon)</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (!Model.Songs.Any())
            {
                <div class="card border-0 shadow-sm rounded-5 py-5 text-center bg-light">
                    <div class="card-body">
                        <i class="fa-solid fa-music fa-4x text-muted opacity-25 mb-3"></i>
                        <h3 class="fw-bold">No tracks added yet</h3>
                        <p class="text-muted mb-4">Your setlist is currently empty. Ready to make some noise?</p>
                        @if (Model.CanAddSongs)
                        {
                            <a asp-action="AddSongs" asp-route-id="@Model.Id" class="btn btn-success rounded-pill px-5 py-2 fw-bold shadow">
                                <i class="fa-solid fa-plus me-2"></i>Add First Song
                            </a>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden d-none d-md-block">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-dark text-white shadow-sm">
                                <tr class="small text-uppercase">
                                    <th class="ps-4 py-4" style="width: 70px;">#</th>
                                    <th class="py-4">Track Details</th>
                                    <th class="py-4">Genre</th>
                                    <th class="py-4 text-center">Musical Info</th>
                                    <th class="py-4 text-center">Length</th>
                                    @if (Model.CanEdit)
                                    {
                                        <th class="py-4 text-end pe-4">Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{ int position = 1; }
                                @foreach (var song in Model.Songs)
                                {
                                    <tr class="song-row">
                                        <td class="ps-4">
                                            <span class="text-muted fw-bold">@position.ToString("00")</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light p-2 rounded-3 me-3 text-dark shadow-sm">
                                                    <i class="fa-solid fa-play fa-xs"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-dark fs-6">@song.Title</div>
                                                    <div class="text-muted small">@song.Artist</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge rounded-pill bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-3 py-2 fw-normal">@song.Genre</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="fw-bold text-dark">@song.MusicalKey</div>
                                            <div class="badge bg-secondary bg-opacity-10 text-muted fw-normal">@song.TempoDisplay</div>
                                        </td>
                                        <td class="text-center text-muted fw-medium">
                                            <i class="fa-regular fa-clock me-1 opacity-50"></i>@song.Duration
                                        </td>
                                        @if (Model.CanEdit)
                                        {
                                            <td class="text-end pe-4">
                                                <form asp-action="RemoveSong" method="post" id="remove-@song.SongId">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="setlistId" value="@Model.Id" />
                                                    <input type="hidden" name="songId" value="@song.SongId" />
                                                    <button type="button" class="btn btn-outline-danger btn-sm border-0 rounded-circle p-2 hover-scale"
                                                            onclick="confirmDelete('remove-@song.SongId', 'Remove @song.Title from list?', 'Confirm')">
                                                        <i class="fa-solid fa-xmark px-1"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        }
                                    </tr>
                                    position++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="d-md-none">
                    @{ int mobilePos = 1; }
                    @foreach (var song in Model.Songs)
                    {
                        <div class="card border-0 shadow-sm rounded-4 mb-3 hover-scale overflow-hidden">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="me-3">
                                        <span class="badge bg-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">@mobilePos</span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="fw-bold mb-0">@song.Title</h6>
                                        <small class="text-muted">@song.Artist</small>
                                    </div>
                                    @if (Model.CanEdit)
                                    {
                                        <form asp-action="RemoveSong" method="post" id="rm-mob-@song.SongId">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="setlistId" value="@Model.Id" />
                                            <input type="hidden" name="songId" value="@song.SongId" />
                                            <button type="button" class="btn btn-link text-danger p-0" onclick="confirmDelete('rm-mob-@song.SongId', 'Remove track?', 'Delete')">
                                                <i class="fa-solid fa-circle-minus fa-lg"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-light text-dark border py-2 px-3">@song.Genre</span>
                                    <span class="badge bg-primary bg-opacity-10 text-primary py-2 px-3">@song.MusicalKey</span>
                                    <span class="ms-auto text-muted small mt-1">@song.Duration</span>
                                </div>
                            </div>
                        </div>
                        mobilePos++;
                    }
                </div>
            }
        </div>
    </div>

    <div class="mt-5 border-top pt-4">
        <a asp-controller="Bands" asp-action="Details" asp-route-id="@Model.BandId"
           class="btn btn-link text-dark fw-bold text-decoration-none p-0 hover-scale">
            <i class="fa-solid fa-arrow-left-long me-2"></i>Return to Group Profile
        </a>
    </div>

</div>
<style>
    .bg-animated-gradient {
        min-height: 250px;
        background: linear-gradient(-45deg, #1db954, #191414, #212529, #121212);
        background-size: 400% 400%;
        animation: gradientAnimation 15s ease infinite;
        border-radius: 1rem;
    }

    @@keyframes gradientAnimation {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .stat-card {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        color: white;
    }

    .btn-edit-glass {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(5px);
    }

        .btn-edit-glass:hover {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

    .btn-delete-glass {
        background: rgba(220, 53, 69, 0.1);
        color: #ff8a94;
        border: 1px solid rgba(220, 53, 69, 0.2);
    }

        .btn-delete-glass:hover {
            background: #dc3545;
            color: white;
        }

    .hover-scale {
        transition: transform 0.2s ease;
    }

        .hover-scale:hover {
            transform: translateY(-2px);
        }

    .fw-black {
        font-weight: 900;
    }
</style>
