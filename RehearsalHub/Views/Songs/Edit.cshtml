@using RehearsalHub.Data.Models.Enums
@model SongInputModel

@{
    ViewData["Title"] = "Edit Song";
}

<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <div class="icon-circle-gradient d-inline-block p-4 rounded-circle mb-3 shadow-lg">
                    <i class="fa fa-pencil-square-o fa-3x text-white"></i>
                </div>
                <h1 class="fw-bold text-gradient-static">Edit Track</h1>
                <p class="text-muted uppercase-label">Fine-tune the details for <span class="fw-bold text-dark">@Model.Title</span></p>
            </div>

            <form asp-action="Edit" method="post" class="needs-validation">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="BandId" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card border-0 shadow-lg h-100 rounded-4 overflow-hidden">
                            <div class="card-header bg-dark-spotify text-white py-3 border-0">
                                <h5 class="mb-0 small-caps"><i class="fa fa-file-text-o me-2 text-orange-red"></i>Basic Info</h5>
                            </div>
                            <div class="card-body p-4 bg-white">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label fw-bold text-dark small-caps">Song Title</label>
                                    <input asp-for="Title" class="form-control custom-input" />
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Artist" class="form-label fw-bold text-dark small-caps">Artist / Band</label>
                                    <input asp-for="Artist" class="form-control custom-input" />
                                    <span asp-validation-for="Artist" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Duration" class="form-label fw-bold text-dark small-caps">Duration</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-clock-o text-muted"></i></span>
                                        <input asp-for="Duration" class="form-control custom-input border-start-0" placeholder="00:00" />
                                    </div>
                                    <span asp-validation-for="Duration" class="text-danger small"></span>
                                </div>

                                <div class="mb-0">
                                    <label asp-for="Genre" class="form-label fw-bold text-dark small-caps">Genre</label>
                                    <select asp-for="Genre" class="form-select custom-input" asp-items="Html.GetEnumSelectList<MusicGenre>()">
                                        <option value="">-- Select Genre --</option>
                                    </select>
                                    <span asp-validation-for="Genre" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-0 shadow-lg h-100 rounded-4 overflow-hidden">
                            <div class="card-header bg-dark-spotify text-white py-3 border-0">
                                <h5 class="mb-0 small-caps"><i class="fa fa-sliders me-2 text-orange-red"></i>Musical Details</h5>
                            </div>
                            <div class="card-body p-4 bg-white">
                                <div class="mb-3">
                                    <label asp-for="MusicalKey" class="form-label fw-bold text-dark small-caps">Musical Key</label>
                                    <select asp-for="MusicalKey" class="form-select custom-input" asp-items="Html.GetEnumSelectList<MusicalKey>()">
                                        <option value="">-- Select Key --</option>
                                    </select>
                                    <span asp-validation-for="MusicalKey" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Tempo" class="form-label fw-bold text-dark small-caps">Tempo (BPM)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-heartbeat text-muted"></i></span>
                                        <input asp-for="Tempo" type="number" class="form-control custom-input border-start-0" />
                                    </div>
                                    <span asp-validation-for="Tempo" class="text-danger small"></span>
                                </div>

                                <div class="p-3 bg-light rounded-4 border-dashed mt-4">
                                    <div class="form-check form-switch mb-0">
                                        <input asp-for="IsPrivate" class="form-check-input custom-switch" type="checkbox">
                                        <label asp-for="IsPrivate" class="form-check-label fw-bold text-dark">Private Song</label>
                                    </div>
                                    <small class="text-muted d-block mt-1 ps-1">
                                        Only members of your band will see this track.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-5 p-4 bg-dark-spotify rounded-4 shadow-lg gap-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light px-4 rounded-pill transition-all">
                        <i class="fa fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-gradient btn-lg px-5 rounded-pill shadow-lg border-0">
                        <i class="fa fa-refresh me-2"></i>Update Song
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --spotify-black: #191414;
        --orange-red: #FF4500;
        --dark-orange: #FF8C00;
        --gradient-main: linear-gradient(-45deg, #FF4500, #FF0000, #FF8C00, #191414);
    }

    .bg-dark-spotify {
        background-color: var(--spotify-black) !important;
    }

    .text-orange-red {
        color: var(--orange-red);
    }

    .text-gradient-static {
        background: linear-gradient(45deg, #FF4500, #FF8C00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .icon-circle-gradient {
        background: var(--gradient-main);
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-gradient {
        background: var(--gradient-main);
        background-size: 300% 300%;
        color: white !important;
        transition: all 0.3s ease;
        animation: gradientShift 10s ease infinite;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(255, 69, 0, 0.4);
        }

    .custom-input {
        padding: 0.75rem 1.2rem;
        border-radius: 12px;
        border: 1px solid #eee;
        transition: all 0.2s;
    }

        .custom-input:focus {
            border-color: var(--orange-red);
            box-shadow: 0 0 0 0.25rem rgba(255, 69, 0, 0.15);
        }

    .border-dashed {
        border: 2px dashed #dee2e6;
    }

    .custom-switch:checked {
        background-color: var(--orange-red);
        border-color: var(--orange-red);
    }

    .uppercase-label {
        letter-spacing: 2px;
        font-size: 0.75rem;
        text-transform: uppercase;
    }

    .small-caps {
        font-variant: small-caps;
        letter-spacing: 0.5px;
    }

    .transition-all {
        transition: all 0.3s;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>