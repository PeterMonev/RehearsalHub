@model SongPagedViewModel

@{
    ViewData["Title"] = "Song Library";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="fw-bold text-dark mb-0">
                <i class="fa-solid fa-music text-primary me-2"></i>Song Library
            </h1>
            <p class="text-muted mb-0">Manage your tracks, genres, and keys in one place.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            <i class="fa-solid fa-plus me-2"></i>Add New Song
        </a>
    </div>

    <!-- Search + Filters -->
    <div class="card border-0 shadow-sm mb-4 rounded-3">
        <div class="card-body bg-light p-4">
            <form asp-action="Index" method="get">
                <input type="hidden" name="bandId" value="@Model.BandId" />

                <!-- Search Bar -->
                <div class="row g-3 mb-3">
                    <div class="col-12">
                        <div class="input-group input-group-lg shadow-sm">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fa-solid fa-magnifying-glass text-primary"></i>
                            </span>
                            <input type="text"
                                   name="searchTerm"
                                   class="form-control border-start-0 border-end-0 ps-0"
                                   placeholder="Search by title or artist..."
                                   value="@Model.SearchTerm">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa-solid fa-search me-2"></i>Search
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Filter Pills -->
                <div class="d-flex align-items-center mb-3">
                    <div class="me-2 text-muted small fw-semibold">
                        <i class="fa-solid fa-filter me-1"></i>FILTERS:
                    </div>
                </div>

                <div class="row g-3">
                    <!-- Genre Filter -->
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted fw-semibold mb-2">
                            <i class="fa-solid fa-guitar me-1"></i>Genre
                        </label>
                        <div class="btn-group w-100 shadow-sm" role="group">
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(string.IsNullOrEmpty(Model.Genre) ? "btn-primary" : "btn-outline-primary")">
                                All
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="Rock"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Genre == "Rock" ? "btn-primary" : "btn-outline-primary")">
                                Rock
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="Pop"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Genre == "Pop" ? "btn-primary" : "btn-outline-primary")">
                                Pop
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="Jazz"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Genre == "Jazz" ? "btn-primary" : "btn-outline-primary")">
                                Jazz
                            </a>
                        </div>
                    </div>

                    <!-- Key Filter -->
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted fw-semibold mb-2">
                            <i class="fa-solid fa-music me-1"></i>Musical Key
                        </label>
                        <div class="btn-group w-100 shadow-sm" role="group">
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(string.IsNullOrEmpty(Model.Key) ? "btn-secondary" : "btn-outline-secondary")">
                                All
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="C"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Key == "C" ? "btn-secondary" : "btn-outline-secondary")">
                                C
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="D"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Key == "D" ? "btn-secondary" : "btn-outline-secondary")">
                                D
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="E"
                               asp-route-tempo="@Model.Tempo"
                               class="btn @(Model.Key == "E" ? "btn-secondary" : "btn-outline-secondary")">
                                E
                            </a>
                        </div>
                    </div>

                    <!-- Tempo Filter -->
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted fw-semibold mb-2">
                            <i class="fa-solid fa-gauge-high me-1"></i>Tempo
                        </label>
                        <div class="btn-group w-100 shadow-sm" role="group">
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="@Model.Key"
                               class="btn @(string.IsNullOrEmpty(Model.Tempo) ? "btn-success" : "btn-outline-success")">
                                All
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="slow"
                               class="btn @(Model.Tempo == "slow" ? "btn-success" : "btn-outline-success")">
                                <i class="fa-solid fa-turtle"></i> Slow
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="medium"
                               class="btn @(Model.Tempo == "medium" ? "btn-success" : "btn-outline-success")">
                                <i class="fa-solid fa-walking"></i> Medium
                            </a>
                            <a asp-action="Index"
                               asp-route-bandId="@Model.BandId"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="fast"
                               class="btn @(Model.Tempo == "fast" ? "btn-success" : "btn-outline-success")">
                                <i class="fa-solid fa-fire"></i> Fast
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Active Filters & Clear Button -->
                @if (Model.HasActiveFilters)
                {
                    <div class="mt-3 pt-3 border-top">
                        <div class="d-flex flex-wrap align-items-center gap-2">
                            <span class="badge bg-light text-dark border px-3 py-2">
                                <i class="fa-solid fa-filter me-1"></i>Active Filters:
                            </span>

                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <span class="badge bg-primary px-3 py-2">
                                    <i class="fa-solid fa-search me-1"></i>@Model.SearchTerm
                                </span>
                            }

                            @if (!string.IsNullOrEmpty(Model.Genre))
                            {
                                <span class="badge bg-primary px-3 py-2">
                                    <i class="fa-solid fa-guitar me-1"></i>@Model.Genre
                                </span>
                            }

                            @if (!string.IsNullOrEmpty(Model.Key))
                            {
                                <span class="badge bg-secondary px-3 py-2">
                                    <i class="fa-solid fa-music me-1"></i>Key: @Model.Key
                                </span>
                            }

                            @if (!string.IsNullOrEmpty(Model.Tempo))
                            {
                                <span class="badge bg-success px-3 py-2">
                                    <i class="fa-solid fa-gauge-high me-1"></i>@Model.Tempo.ToUpper()
                                </span>
                            }

                            <a asp-action="Index" asp-route-bandId="@Model.BandId"
                               class="btn btn-sm btn-outline-danger rounded-pill ms-auto">
                                <i class="fa-solid fa-times me-1"></i>Clear All Filters
                            </a>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Results Count -->
    @if (Model.Songs.Any())
    {
        <div class="mb-3">
            <p class="text-muted small">
                <i class="fa-solid fa-list-music me-1"></i>
                Showing <strong>@Model.Songs.Count()</strong> songs
                @if (Model.HasActiveFilters)
                {
                    <span>(filtered results)</span>
                }
            </p>
        </div>
    }

    <!-- Table view for desktop -->
    <div class="d-none d-md-block card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Track Info</th>
                        <th class="py-3">Genre</th>
                        <th class="py-3 text-center">Key</th>
                        <th class="py-3 text-center">Tempo</th>
                        <th class="py-3 text-center">Duration</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Songs.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fa-solid fa-music fa-3x mb-3 opacity-25"></i>
                                    <p class="mb-0">No songs found matching your criteria.</p>
                                    @if (Model.HasActiveFilters)
                                    {
                                        <a asp-action="Index" asp-route-bandId="@Model.BandId" class="btn btn-sm btn-outline-primary mt-2">
                                            Clear Filters
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var song in Model.Songs)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
                                            <i class="fa-solid fa-guitar"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@song.Title</div>
                                            <div class="text-muted small">@song.Artist</div>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-info bg-opacity-10 text-info px-3">@song.Genre</span></td>
                                <td class="text-center"><span class="badge bg-secondary px-3">@song.MusicalKey</span></td>
                                <td class="text-center fw-medium text-dark">@song.TempoDisplay</td>
                                <td class="text-center text-muted small">@song.Duration</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Details"
                                           asp-route-id="@song.Id"
                                           class="btn btn-sm btn-white border"
                                           title="View Details">
                                            <i class="fa-solid fa-eye text-primary"></i>
                                        </a>

                                        @if (song.CanEdit)
                                        {
                                            <a asp-action="Edit"
                                               asp-controller="Songs"
                                               asp-route-id="@song.Id"
                                               class="btn btn-sm btn-white border border-start-0"
                                               title="Edit Song">
                                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                            </a>

                                            <form asp-action="Delete"
                                                  asp-route-id="@song.Id"
                                                  method="post"
                                                  class="d-inline">
                                                <button type="submit"
                                                        class="btn btn-sm btn-white border border-start-0 btn-delete-confirm"
                                                        data-title="Delete song?"
                                                        data-message="This song will be permanently deleted!"
                                                        title="Delete Song">
                                                    <i class="fa-solid fa-trash text-danger"></i>
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile view -->
    <div class="d-md-none">
        @if (!Model.Songs.Any())
        {
            <div class="card border-0 shadow-sm rounded-3 text-center py-5">
                <i class="fa-solid fa-music fa-3x mb-3 text-muted opacity-25"></i>
                <p class="text-muted mb-0">No songs found matching your criteria.</p>
                @if (Model.HasActiveFilters)
                {
                    <a asp-action="Index" asp-route-bandId="@Model.BandId" class="btn btn-sm btn-outline-primary mt-3">
                        Clear Filters
                    </a>
                }
            </div>
        }
        else
        {
            @foreach (var song in Model.Songs)
            {
                <div class="card border-0 shadow-sm rounded-3 mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3 text-primary">
                                    <i class="fa-solid fa-guitar"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0 text-dark">@song.Title</h6>
                                    <small class="text-muted">@song.Artist</small>
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" asp-action="Details" asp-route-id="@song.Id"><i class="fa-solid fa-eye me-2 text-primary"></i>Details</a></li>
                                    @if (song.CanEdit)
                                    {
                                        <li><a class="dropdown-item" asp-action="Edit" asp-controller="Songs" asp-route-id="@song.Id"><i class="fa-solid fa-pen-to-square me-2 text-warning"></i>Edit</a></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@song.Id" method="post" class="d-inline m-0 p-0">
                                                <button type="submit"
                                                        class="dropdown-item btn-delete-confirm"
                                                        data-title="Delete song?"
                                                        data-message="This song will be permanently deleted!"
                                                        title="Delete Song">
                                                    <i class="fa-solid fa-trash me-2 text-danger"></i>Delete
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <hr class="text-muted opacity-25">
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-info bg-opacity-10 text-info">@song.Genre</span>
                            <span class="badge bg-secondary">@song.MusicalKey</span>
                            <span class="badge bg-light text-dark border">@song.TempoDisplay</span>
                            <span class="badge bg-light text-muted border small"><i class="fa-regular fa-clock me-1"></i>@song.Duration</span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4 mb-5">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm pagination-md-default">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link shadow-none"
                           asp-action="Index"
                           asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-bandId="@Model.BandId"
                           asp-route-genre="@Model.Genre"
                           asp-route-key="@Model.Key"
                           asp-route-tempo="@Model.Tempo">
                            <i class="fa-solid fa-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link shadow-none"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-bandId="@Model.BandId"
                               asp-route-genre="@Model.Genre"
                               asp-route-key="@Model.Key"
                               asp-route-tempo="@Model.Tempo">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link shadow-none"
                           asp-action="Index"
                           asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-bandId="@Model.BandId"
                           asp-route-genre="@Model.Genre"
                           asp-route-key="@Model.Key"
                           asp-route-tempo="@Model.Tempo">
                            <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .page-link {
        color: #333;
        border-radius: 6px !important;
        margin: 0 2px;
        border: 1px solid #dee2e6;
    }

    .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white !important;
    }

    .btn-white {
        background-color: #fff;
    }

        .btn-white:hover {
            background-color: #f8f9fa;
        }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-1px);
        }

    .badge {
        font-weight: 500;
        letter-spacing: 0.3px;
    }

    @@media (max-width: 767.98px) {
        .btn-lg {
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }

        .btn-group {
            display: flex;
        }

            .btn-group .btn {
                font-size: 0.85rem;
                flex: 1;
            }
    }
</style>
