@model SongPagedViewModel

@{
    ViewData["Title"] = "Song Library";
}

<div class="container-fluid px-4 mt-4 animate-fade-in">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="fw-bold mb-0 text-gradient">
                <i class="fa-solid fa-guitar me-2"></i>Song Library
            </h1>
            <p class="text-muted mb-0 small uppercase-label">Manage your tracks, genres, and keys</p>
        </div>
        <a asp-action="Create" class="btn btn-gradient btn-lg rounded-pill shadow-lg border-0 px-4">
            <i class="fa-solid fa-plus-circle me-2"></i>Add New Song
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden">
        <div class="card-body bg-dark-soft p-4">
            <form asp-action="Index" method="get">
                <input type="hidden" name="bandId" value="@Model.BandId" />

                <div class="row g-3 mb-4">
                    <div class="col-12">
                        <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border">
                            <span class="input-group-text bg-white border-0 ps-4">
                                <i class="fa-solid fa-magnifying-glass text-orange-red"></i>
                            </span>
                            <input type="text"
                                   name="searchTerm"
                                   class="form-control border-0 focus-none ps-2"
                                   placeholder="Search by title or artist..."
                                   value="@Model.SearchTerm">
                            <button type="submit" class="btn btn-gradient px-4 border-0">
                                <i class="fa-solid fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted fw-bold mb-2 uppercase-label ps-2">Genre</label>
                        <div class="btn-group w-100 rounded-pill overflow-hidden shadow-sm" role="group">
                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-searchTerm="@Model.SearchTerm"
                               class="btn @(string.IsNullOrEmpty(Model.Genre) ? "btn-gradient" : "btn-light border")">All</a>
                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-genre="Rock"
                               class="btn @(Model.Genre == "Rock" ? "btn-gradient" : "btn-light border")">Rock</a>
                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-genre="Jazz"
                               class="btn @(Model.Genre == "Jazz" ? "btn-gradient" : "btn-light border")">Jazz</a>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label small text-muted fw-bold mb-2 uppercase-label ps-2">Musical Key</label>
                        <div class="btn-group w-100 rounded-pill overflow-hidden shadow-sm" role="group">
                            <a asp-action="Index" asp-route-bandId="@Model.BandId"
                               class="btn @(string.IsNullOrEmpty(Model.Key) ? "btn-dark-spotify" : "btn-light border")">All</a>
                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-key="C"
                               class="btn @(Model.Key == "C" ? "btn-dark-spotify" : "btn-light border")">C</a>
                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-key="G"
                               class="btn @(Model.Key == "G" ? "btn-dark-spotify" : "btn-light border")">G</a>
                        </div>
                    </div>
                    <div class="col-12 col-md-5">
                        <label class="form-label small text-muted fw-bold mb-2 uppercase-label ps-2">Tempo</label>
                        <div class="btn-group w-100 rounded-pill overflow-hidden shadow-sm" role="group">
                            <a asp-action="Index" asp-route-bandId="@Model.BandId"
                               class="btn @(string.IsNullOrEmpty(Model.Tempo) ? "btn-gradient" : "btn-light border")" title="All">
                                <i class="fa fa-headphones"></i> <span class="d-none d-lg-inline">All</span>
                            </a>

                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-tempo="slow"
                               class="btn @(Model.Tempo == "slow" ? "btn-gradient" : "btn-light border")" title="Slow">
                                <i class="fa fa-hourglass-start"></i>
                            </a>

                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-tempo="medium"
                               class="btn @(Model.Tempo == "medium" ? "btn-gradient" : "btn-light border")" title="Medium">
                                <i class="fa fa-heartbeat"></i>
                            </a>

                            <a asp-action="Index" asp-route-bandId="@Model.BandId" asp-route-tempo="fast"
                               class="btn @(Model.Tempo == "fast" ? "btn-gradient" : "btn-light border")" title="Fast">
                                <i class="fa fa-bolt"></i>
                            </a>
                        </div>
                    </div>
                </div>

                @if (Model.HasActiveFilters)
                {
                    <div class="mt-4 pt-3 border-top d-flex align-items-center gap-2">
                        <span class="small text-muted fw-bold">ACTIVE:</span>
                        <a asp-action="Index" asp-route-bandId="@Model.BandId" class="badge rounded-pill bg-danger text-decoration-none px-3 py-2 shadow-sm">
                            Reset All <i class="fa-solid fa-rotate-right ms-1"></i>
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="d-none d-md-block card border-0 shadow-lg rounded-4 overflow-hidden mb-5">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark-spotify text-white">
                    <tr class="border-0">
                        <th class="ps-4 py-3 border-0">Track</th>
                        <th class="py-3 border-0">Genre</th>
                        <th class="py-3 border-0 text-center">Key</th>
                        <th class="py-3 border-0 text-center">Tempo</th>
                        <th class="py-3 border-0 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model.Songs)
                    {
                        <tr class="song-row">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box-gradient rounded-3 me-3">
                                        <i class="fa-solid fa-music text-white"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark mb-0">@song.Title</div>
                                        <div class="text-muted small">@song.Artist</div>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge rounded-pill bg-light text-dark border px-3">@song.Genre</span></td>
                            <td class="text-center"><span class="fw-bold text-orange-red">@song.MusicalKey</span></td>
                            <td class="text-center">
                                <span class="badge bg-dark-spotify rounded-pill">@song.TempoDisplay</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm rounded-pill overflow-hidden border">
                                    <a asp-action="Details" asp-route-id="@song.Id" class="btn btn-sm btn-white px-3" title="View"><i class="fa-solid fa-eye text-orange-red"></i></a>
                                    <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-sm btn-white px-3" title="Edit"><i class="fa-solid fa-pen text-dark"></i></a>
                                    <button class="btn btn-sm btn-white px-3 btn-delete-confirm text-danger"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-md-none">
        @foreach (var song in Model.Songs)
        {
            <div class="card border-0 shadow-sm rounded-4 mb-3 position-relative overflow-hidden">
                <div class="gradient-stripe"></div>
                <div class="card-body ps-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="fw-bold mb-0">@song.Title</h6>
                            <p class="text-muted small mb-2">@song.Artist</p>
                        </div>
                        <span class="badge bg-dark-spotify">@song.MusicalKey</span>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="badge rounded-pill bg-light text-dark border">@song.Genre</span>
                        <span class="badge rounded-pill bg-light text-dark border">@song.Duration</span>
                    </div>
                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@song.Id" class="btn btn-sm btn-gradient rounded-pill px-3">Details</a>
                        <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-sm btn-outline-dark rounded-pill px-3">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    :root {
        --spotify-black: #191414;
        --orange-red: #FF4500;
        --deep-red: #FF0000;
        --dark-orange: #FF8C00;
        --gradient-main: linear-gradient(-45deg, #FF4500, #FF0000, #FF8C00, #191414);
    }

    /* Gradient Animation */
    .text-gradient {
        background: linear-gradient(45deg, #FF4500, #FF8C00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient {
        background: var(--gradient-main);
        background-size: 300% 300%;
        color: white !important;
        transition: all 0.4s ease;
        animation: gradientShift 10s ease infinite;
        border: none;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 69, 0, 0.3);
            filter: brightness(1.1);
        }

    .bg-dark-spotify {
        background-color: var(--spotify-black) !important;
        color: white;
    }

    .bg-dark-soft {
        background-color: #f8f9fa;
    }

    .text-orange-red {
        color: var(--orange-red);
    }

    .icon-box-gradient {
        background: var(--gradient-main);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(255, 0, 0, 0.2);
    }

    .gradient-stripe {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 5px;
        background: var(--gradient-main);
    }

    .song-row {
        transition: all 0.2s;
       
    }

        .song-row:hover {
            background-color: rgba(255, 69, 0, 0.03);
        }

    .uppercase-label {
        letter-spacing: 1.5px;
        font-size: 0.65rem;
        text-transform: uppercase;
    }

    .focus-none:focus {
        box-shadow: none;
    }

    .btn-dark-spotify {
        background-color: var(--spotify-black);
        color: white;
        border: none;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>