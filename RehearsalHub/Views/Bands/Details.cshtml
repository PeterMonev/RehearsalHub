@using RehearsalHub.Web.ViewModels.Bands
@using RehearsalHub.Data.Models.Enums
@using System.Security.Claims
@model BandDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="position-relative overflow-hidden shadow-lg mb-5" style="border-radius: 2.5rem; height: 380px; background-color: #1a1a1a;">
    <div class="position-absolute w-100 h-100"
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.85) 100%),
                url('@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://images.unsplash.com/photo-1501386761578-eac5c94b800a?q=80&w=2070" : Model.ImageUrl)') center/cover no-repeat;
                z-index: 1;">
    </div>

    <div class="position-absolute bottom-0 start-0 p-4 p-md-5 w-100" style="z-index: 10;">
        <div class="row align-items-end g-3">
            <div class="col-12 col-md-7 text-white text-center text-md-start">
                <span class="badge bg-warning text-dark mb-3 fw-bold px-3 py-2 text-uppercase shadow-sm">@Model.Genre</span>
                <h1 class="display-3 fw-bold mb-0 p-3 title-blur">
                    @Model.Name
                </h1>
            </div>

            <div class="col-12 col-md-5">
                @if (Model.IsOwner)
                {
                    <div class="d-flex justify-content-center justify-content-md-end gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-rock-gradient btn-lg rounded-pill px-4 shadow-lg fw-bold border-0">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm-@Model.Id" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn btn-glass-danger btn-lg rounded-pill px-4 shadow-lg fw-bold border-2"
                                    onclick="confirmDelete('deleteForm-@Model.Id', 'Delete this band?')">
                                <i class="fa-solid fa-trash me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white overflow-hidden">
            <div class="card-header bg-white border-0 p-4 pb-0 d-flex justify-content-between align-items-center">
                <h2 class="h4 fw-bold mb-0 text-dark">
                    <i class="fa-solid fa-calendar-check text-info me-2"></i>Upcoming Sessions
                </h2>
                @if (Model.IsOwner)
                {
                    <a asp-controller="Rehearsals" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-sm btn-info text-white rounded-pill px-3 fw-bold shadow-sm">
                        <i class="fa-solid fa-plus me-1"></i> Book
                    </a>
                }
            </div>
            <div class="card-body p-4">
                @if (!Model.UpcomingRehearsals.Any())
                {
                    <div class="text-center py-5 bg-light rounded-4 border border-dashed">
                        <i class="fa-solid fa-couch fa-2x text-muted opacity-25 mb-2"></i>
                        <p class="text-muted mb-0">No sessions planned yet.</p>
                    </div>
                }
                else
                {
                    @foreach (var r in Model.UpcomingRehearsals)
                    {
                        <a asp-controller="Rehearsals" asp-action="Details" asp-route-id="@r.Id" class="text-decoration-none d-block mb-3">
                            <div class="rehearsal-item p-3 rounded-4 border-start border-info border-5 shadow-sm transition-all">
                                <div class="d-flex align-items-center">
                                    <div class="calendar-mini me-4">
                                        <div class="cal-month text-uppercase">@r.Start.ToString("MMM")</div>
                                        <div class="cal-day">@r.Start.Day</div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold text-dark fs-5">@r.SetlistName</h6>
                                        <div class="d-flex gap-3 small text-muted">
                                            <span><i class="fa-regular fa-clock text-info me-1"></i> @r.Start.ToString("HH:mm")</span>
                                            <span><i class="fa-solid fa-location-dot text-info me-1"></i> Studio 1</span>
                                        </div>
                                    </div>
                                    <i class="fa-solid fa-chevron-right text-muted opacity-25"></i>
                                </div>
                            </div>
                        </a>
                    }
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm rounded-4 bg-white overflow-hidden">
            <div class="card-header bg-white border-0 p-4 pb-0 d-flex justify-content-between align-items-center">
                <h2 class="h4 fw-bold mb-0 text-dark">
                    <i class="fa-solid fa-compact-disc text-warning me-2"></i>Setlists
                </h2>
                <a asp-controller="Setlists" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-sm btn-warning text-dark rounded-pill px-3 fw-bold shadow-sm">
                    <i class="fa-solid fa-plus me-1"></i> New List
                </a>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    @if (Model.Setlists == null || !Model.Setlists.Any())
                    {
                        <div class="col-12 text-center py-4 bg-light rounded-4 border border-dashed">
                            <p class="text-muted mb-0">No setlists created yet.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var s in Model.Setlists)
                        {
                            <div class="col-md-6">
                                <a asp-controller="Setlists" asp-action="Details" asp-route-id="@s.Id" class="text-decoration-none d-block">
                                    <div class="setlist-card p-3 bg-white border rounded-4 shadow-sm d-flex align-items-center transition-all">
                                        <div class="bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3">
                                            <i class="fa-solid fa-music"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 fw-bold text-dark">@s.Name</h6>
                                            <small class="text-muted">@s.SongsCount tracks</small>
                                        </div>
                                        <i class="fa-solid fa-circle-play text-warning opacity-50"></i>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 bg-white p-4 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                <div>
                    <h3 class="h5 fw-bold mb-0 text-dark">Lineup</h3>
                    <small class="text-muted">@Model.Members.Count active members</small>
                </div>
                @if (Model.IsOwner)
                {
                    <button type="button" class="btn btn-electric-blue btn-sm rounded-pill px-3 fw-bold shadow-sm invite-btn"
                            data-bs-toggle="modal" data-bs-target="#inviteModal">
                        <i class="fa-solid fa-user-plus me-1"></i> Invite
                    </button>
                }
            </div>

            <div class="d-flex flex-column gap-3 mb-4">
                @foreach (var member in Model.Members)
                {
                    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                    bool isMe = currentUserId == member.UserId;

                    <div class="d-flex align-items-center justify-content-between member-row p-2 rounded-4 transition-all">
                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@member.UserId" class="d-flex align-items-center text-decoration-none">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrEmpty(member.AvatarUrl) ? $"https://ui-avatars.com/api/?name={member.FullName}&background=random" : member.AvatarUrl)"
                                     class="rounded-circle border border-2 shadow-sm" style="width: 45px; height: 45px; object-fit: cover;">
                                @if (member.IsLeader)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark border border-white p-1">
                                        <i class="fa-solid fa-crown" style="font-size: 7px;"></i>
                                    </span>
                                }
                            </div>
                            <div class="ms-3">
                                <p class="mb-0 fw-bold text-dark lh-sm">@member.FullName</p>
                                <small class="text-info fw-medium">@member.Instrument</small>
                            </div>
                        </a>
                        @if (!member.IsLeader && (Model.IsOwner || isMe))
                        {
                            <form asp-controller="Bands" asp-action="RemoveMember" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bandId" value="@Model.Id" />
                                <input type="hidden" name="userId" value="@member.UserId" />
                                <button type="button" class="btn btn-link text-danger p-0 border-0" onclick="confirmDelete(this.form, 'Remove member?')">
                                    <i class="fa-solid fa-user-minus"></i>
                                </button>
                            </form>
                        }
                    </div>
                }
            </div>

            <a asp-controller="Songs" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-outline-info w-100 rounded-4 py-3 border-dashed border-2 fw-bold transition-all">
                <i class="fa-solid fa-plus-circle me-2"></i>Add Band Song
            </a>
        </div>
    </div>
</div>

<style>
    .btn-rock-gradient {
        background: linear-gradient(135deg, #FF4B2B 0%, #FF8811 100%);
        color: white;
        transition: all 0.3s ease;
    }

        .btn-rock-gradient:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 75, 43, 0.4);
            filter: brightness(1.1);
        }

    .btn-glass-danger {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.5);
        color: white;
        transition: all 0.3s ease;
    }

        .btn-glass-danger:hover {
            background: #dc3545;
            border-color: #dc3545;
            color: white;
        }

    .btn-electric-blue {
        background: #0dcaf0;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-electric-blue:hover {
            background: #0baccc;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(13, 202, 240, 0.3);
        }

    .calendar-mini {
        background: #fff;
        border: 1px solid #e0e6ed;
        border-radius: 10px;
        min-width: 60px;
        text-align: center;
        overflow: hidden;
    }

    .cal-month {
        background: #0dcaf0;
        color: white;
        font-size: 0.65rem;
        font-weight: 800;
        padding: 2px 0;
    }

    .cal-day {
        font-size: 1.4rem;
        font-weight: 800;
        color: #333;
        line-height: 1.2;
        padding: 5px 0;
    }

    .rehearsal-item {
        background: #f8fafc;
        transition: all 0.3s ease;
    }

        .rehearsal-item:hover {
            background: #fff;
            transform: translateX(8px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
        }

    .setlist-card {
        border: 1px solid #eee;
        transition: all 0.3s ease;
    }

        .setlist-card:hover {
            border-color: #FF8811;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255, 136, 17, 0.1) !important;
        }

    .title-blur {
        text-shadow: 3px 3px 20px rgba(0,0,0,1);
        background: rgba(0,0,0,0.2);
        backdrop-filter: blur(10px);
        border-radius: 1.5rem;
        display: inline-block;
    }

    .member-row:hover {
        background-color: #f8f9fa;
    }

    .border-dashed {
        border-style: dashed !important;
    }
</style>