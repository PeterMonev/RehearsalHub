@using RehearsalHub.Web.ViewModels.Bands
@using RehearsalHub.Data.Models.Enums
@using System.Security.Claims
@model BandDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="position-relative overflow-hidden shadow-lg mb-5 animate-fade-in" style="border-radius: 2.5rem; height: 420px; background-color: #121212;">
    <div class="position-absolute w-100 h-100"
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.2) 0%, rgba(25,20,20,1) 100%),
                url('@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://images.unsplash.com/photo-1501386761578-eac5c94b800a?q=80&w=2070" : Model.ImageUrl)') center/cover no-repeat;
                z-index: 1;">
    </div>

    <div class="position-absolute bottom-0 start-0 p-4 p-md-5 w-100" style="z-index: 10;">
        <div class="row align-items-end g-4">
            <div class="col-12 col-md-8 text-white text-center text-md-start">
                <span class="badge btn-gradient mb-3 fw-bold px-4 py-2 text-uppercase shadow-sm rounded-pill">@Model.Genre</span>
                <h1 class="display-2 fw-bold mb-0 title-blur px-3 py-2">
                    @Model.Name
                </h1>
            </div>

            <div class="col-12 col-md-4">
                @if (Model.IsOwner)
                {
                    <div class="d-flex justify-content-center justify-content-md-end gap-3 mb-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-lg fw-bold border-2 transition-all">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm-@Model.Id" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn btn-glass-danger btn-lg rounded-pill px-4 shadow-lg fw-bold"
                                    onclick="confirmDelete('deleteForm-@Model.Id', 'Delete this band?')">
                                <i class="fa-solid fa-trash me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-lg rounded-4 mb-4 bg-dark-spotify text-white overflow-hidden">
            <div class="card-header bg-dark-spotify border-bottom border-secondary border-opacity-25 p-4 d-flex justify-content-between align-items-center">
                <h2 class="h4 fw-bold mb-0">
                    <i class="fa-solid fa-calendar-check text-orange-red me-2"></i>Upcoming Sessions
                </h2>
                @if (Model.IsOwner)
                {
                    <a asp-controller="Rehearsals" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-gradient btn-sm rounded-pill px-4 fw-bold shadow-sm">
                        <i class="fa-solid fa-plus me-1"></i> Book Studio
                    </a>
                }
            </div>
            <div class="card-body p-4">
                @if (!Model.UpcomingRehearsals.Any())
                {
                    <div class="text-center py-5 rounded-4 border-dashed opacity-75">
                        <i class="fa-solid fa-microphone-lines fa-2x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No sessions planned yet. Time to practice!</p>
                    </div>
                }
                else
                {
                    @foreach (var r in Model.UpcomingRehearsals)
                    {
                        <a asp-controller="Rehearsals" asp-action="Details" asp-route-id="@r.Id" class="text-decoration-none d-block mb-3">
                            <div class="rehearsal-item-dark p-3 rounded-4 border-start border-orange-red border-5 shadow-sm transition-all">
                                <div class="d-flex align-items-center">
                                    <div class="date-badge-dark text-center me-4 py-2 rounded-3" style="min-width: 65px;">
                                        <div class="text-uppercase text-orange-red fw-bold small">@r.Start.ToString("MMM")</div>
                                        <div class="fs-3 fw-bold text-white">@r.Start.Day</div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fw-bold text-white fs-5">@(string.IsNullOrEmpty(r.SetlistName) ? "General Practice" : r.SetlistName)</h6>
                                        <div class="d-flex gap-4 small text-muted">
                                            <span><i class="fa-regular fa-clock text-orange-red me-1"></i> @r.Start.ToString("HH:mm") - @r.End.ToString("HH:mm")</span>
                                            <span><i class="fa-solid fa-location-dot text-orange-red me-1"></i> Studio 1</span>
                                        </div>
                                    </div>
                                    <i class="fa-solid fa-chevron-right text-muted opacity-25"></i>
                                </div>
                            </div>
                        </a>
                    }
                }
            </div>
        </div>

        <div class="card border-0 shadow-lg rounded-4 bg-dark-spotify text-white overflow-hidden">
            <div class="card-header bg-dark-spotify border-bottom border-secondary border-opacity-25 p-4 d-flex justify-content-between align-items-center">
                <h2 class="h4 fw-bold mb-0">
                    <i class="fa-solid fa-compact-disc text-orange-red me-2"></i>Setlists
                </h2>
                <a asp-controller="Setlists" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-outline-light btn-sm rounded-pill px-4 fw-bold">
                    <i class="fa-solid fa-plus me-1"></i> New List
                </a>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    @if (Model.Setlists == null || !Model.Setlists.Any())
                    {
                        <div class="col-12 text-center py-4 rounded-4 border-dashed opacity-75">
                            <p class="text-muted mb-0">No setlists created yet.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var s in Model.Setlists)
                        {
                            <div class="col-md-6">
                                <a asp-controller="Setlists" asp-action="Details" asp-route-id="@s.Id" class="text-decoration-none d-block">
                                    <div class="setlist-card-dark p-3 rounded-4 d-flex align-items-center transition-all">
                                        <div class="btn-gradient rounded-3 p-3 me-3 shadow">
                                            <i class="fa-solid fa-music text-white"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 fw-bold text-white">@s.Name</h6>
                                            <small class="text-muted">@s.SongsCount tracks</small>
                                        </div>
                                        <i class="fa-solid fa-play-circle fs-4 text-orange-red opacity-75 hover-scale"></i>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-lg rounded-4 bg-dark-spotify text-white p-4 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom border-secondary border-opacity-25 pb-3">
                <div>
                    <h3 class="h5 fw-bold mb-0">Band Lineup</h3>
                    <small class="text-muted">@Model.Members.Count active members</small>
                </div>
                @if (Model.IsOwner)
                {
                    <button type="button" class="btn btn-gradient btn-sm rounded-pill px-3 fw-bold shadow-sm"
                            data-bs-toggle="modal" data-bs-target="#inviteModal">
                        <i class="fa-solid fa-user-plus me-1"></i> Invite
                    </button>
                }
            </div>

            <div class="d-flex flex-column gap-3 mb-4">
                @foreach (var member in Model.Members)
                {
                    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                    bool isMe = currentUserId == member.UserId;

                    <div class="d-flex align-items-center justify-content-between member-row-dark p-2 rounded-4 transition-all">
                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@member.UserId" class="d-flex align-items-center text-decoration-none">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrEmpty(member.AvatarUrl) ? $"https://ui-avatars.com/api/?name={member.FullName}&background=random" : member.AvatarUrl)"
                                     class="rounded-circle border border-2 border-orange-red shadow-sm" style="width: 50px; height: 50px; object-fit: cover;">
                                @if (member.IsLeader)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill btn-gradient border border-dark p-1">
                                        <i class="fa-solid fa-crown" style="font-size: 8px;"></i>
                                    </span>
                                }
                            </div>
                            <div class="ms-3">
                                <p class="mb-0 fw-bold text-white lh-sm">@member.FullName</p>
                                <small class="text-orange-red fw-medium">@member.Instrument</small>
                            </div>
                        </a>
                        @if (!member.IsLeader && (Model.IsOwner || isMe))
                        {
                            <form asp-controller="Bands" asp-action="RemoveMember" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bandId" value="@Model.Id" />
                                <input type="hidden" name="userId" value="@member.UserId" />
                                <button type="button" class="btn btn-link text-danger p-0 border-0 opacity-50 hover-opacity-100"
                                        onclick="confirmDelete(this.form, 'Remove @member.FullName from band?')">
                                    <i class="fa-solid fa-user-minus"></i>
                                </button>
                            </form>
                        }
                    </div>
                }
            </div>

            <a asp-controller="Songs" asp-action="Create" asp-route-bandId="@Model.Id" class="btn btn-outline-orange w-100 rounded-4 py-3 border-dashed border-2 fw-bold transition-all mt-2">
                <i class="fa-solid fa-plus-circle me-2"></i>Add Repertoire Song
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --spotify-black: #191414;
        --spotify-dark-grey: #121212;
        --orange-red: #FF4500;
        --gradient-main: linear-gradient(-45deg, #FF4500, #FF0000, #FF8C00);
    }

    .bg-dark-spotify {
        background-color: var(--spotify-black) !important;
    }

    .text-orange-red {
        color: var(--orange-red) !important;
    }

    .btn-gradient {
        background: var(--gradient-main);
        background-size: 200% 200%;
        color: white !important;
        border: none;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 69, 0, 0.4);
        }

    .btn-glass-danger {
        background: rgba(220, 53, 69, 0.1);
        backdrop-filter: blur(5px);
        border: 2px solid rgba(220, 53, 69, 0.5);
        color: #ff4d5e;
        transition: 0.3s;
    }

        .btn-glass-danger:hover {
            background: #dc3545;
            color: white;
        }

    .btn-outline-orange {
        color: var(--orange-red);
        border-color: var(--orange-red);
    }

        .btn-outline-orange:hover {
            background: var(--orange-red);
            color: white;
        }

    .rehearsal-item-dark {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.05);
    }

        .rehearsal-item-dark:hover {
            background: rgba(255,255,255,0.07);
            transform: translateX(10px);
        }

    .date-badge-dark {
        background-color: rgba(0,0,0,0.5);
        border: 1px solid rgba(255,255,255,0.1);
    }

    .setlist-card-dark {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.05);
    }

        .setlist-card-dark:hover {
            background: rgba(255,255,255,0.08);
            border-color: var(--orange-red);
            transform: translateY(-5px);
        }

    .member-row-dark:hover {
        background: rgba(255,255,255,0.05);
    }

    .title-blur {
        background: rgba(0,0,0,0.3);
        backdrop-filter: blur(12px);
        border-radius: 1.5rem;
        display: inline-block;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .border-dashed {
        border: 2px dashed rgba(255,255,255,0.1) !important;
    }

    .hover-scale {
        transition: 0.3s;
    }

        .hover-scale:hover {
            transform: scale(1.2);
        }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>