@using RehearsalHub.Web.ViewModels.Bands
@using RehearsalHub.Web.ViewModels.Shared
@model PagedResult<BandIndexViewModel>

@{
    ViewData["Title"] = "My Bands";
    string? currentSearch = ViewData["CurrentSearch"]?.ToString();
}

<div class="container py-4 animate-fade-in">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 border-bottom border-light pb-4">
        <div>
            <h1 class="display-5 fw-bold text-dark mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Manage your musical projects and upcoming rehearsals</p>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-gradient btn-lg shadow-lg rounded-pill px-4 fw-bold">
                <i class="fa fa-plus-circle me-2"></i>Add New Band
            </a>
        </div>
    </div>

    <div class="mb-5 shadow-sm rounded-4 overflow-hidden">
        <partial name="_SearchPartial" />
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var band in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-lg border-0 band-card bg-dark-spotify text-white overflow-hidden rounded-4">
                        <div class="position-relative overflow-hidden rounded-4 m-2">
                            <img src="@(string.IsNullOrEmpty(band.ImageUrl) ? "/images/no-image.png" : band.ImageUrl)"
                                 class="card-img-top band-image rounded-4" alt="@band.Name">

                            <div class="image-overlay"></div>

                            @if (band.IsOwner)
                            {
                                <span class="badge btn-gradient position-absolute top-0 end-0 m-3 shadow px-3 py-2 rounded-pill fw-bold" style="font-size: 0.7rem;">
                                    <i class="fa fa-star me-1"></i> OWNER
                                </span>
                            }
                            <div class="position-absolute bottom-0 start-0 m-3" style="z-index: 2;">
                                <span class="badge bg-white text-dark px-3 py-2 rounded-pill shadow-sm fw-bold">@band.Genre</span>
                            </div>
                        </div>

                        <div class="card-body p-4 bg-dark-spotify">
                            <h4 class="card-title fw-bold mb-3">@band.Name</h4>

                            <div class="d-flex gap-3 mb-4 small border-bottom border-secondary border-opacity-25 pb-3">
                                <span class="text-orange-red"><i class="fa fa-users me-1"></i> @band.MembersCount Members</span>
                                <span class="text-muted"><i class="fa fa-calendar me-1"></i> @band.UpcomingRehearsals.Count() Sessions</span>
                            </div>

                            <div class="rehearsal-section">
                                <h6 class="text-uppercase fw-bold text-muted mb-3 small-caps" style="font-size: 0.75rem; letter-spacing: 1.5px;">Upcoming Rehearsals</h6>

                                @if (band.UpcomingRehearsals.Any())
                                {
                                    <div class="list-group list-group-flush gap-2">
                                        @foreach (var reh in band.UpcomingRehearsals)
                                        {
                                            <a asp-controller="Rehearsals" asp-action="Details" asp-route-id="@reh.Id"
                                               class="list-group-item list-group-item-action border-0 rounded-4 rehearsal-item-dark p-2 transition-all">
                                                <div class="d-flex align-items-center">
                                                    <div class="date-badge-dark text-center me-3 py-1 rounded-3">
                                                        <span class="d-block fw-bold text-orange-red fs-5 lh-1">@reh.Start.ToString("dd")</span>
                                                        <span class="d-block text-uppercase text-light small-caps" style="font-size: 0.6rem;">@reh.Start.ToString("MMM")</span>
                                                    </div>
                                                    <div class="flex-grow-1 overflow-hidden text-white">
                                                        <div class="d-flex justify-content-between align-items-center mb-0">
                                                            <span class="fw-bold small">@reh.Start.ToString("HH:mm") — @reh.End.ToString("HH:mm")</span>
                                                        </div>
                                                        <div class="text-muted" style="font-size: 0.75rem;">@reh.Start.ToString("dddd")</div>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4 rounded-4 bg-white bg-opacity-5 border border-secondary border-opacity-25 border-dashed">
                                        <i class="fa fa-calendar-o d-block mb-2 text-muted opacity-50"></i>
                                        <span class="text-muted small">No upcoming sessions</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-dark-spotify border-top-0 p-4 pt-0">
                            <div class="row g-2">
                                <div class="col-12">
                                    <a asp-action="Details" asp-route-id="@band.Id" class="btn btn-gradient w-100 fw-bold py-2 rounded-pill shadow">
                                        Manage Band
                                    </a>
                                </div>
                                @if (band.IsOwner)
                                {
                                    <div class="col-6">
                                        <a asp-action="Edit" asp-controller="Bands" asp-route-id="@band.Id" class="btn btn-outline-light btn-sm w-100 rounded-pill border-opacity-25">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <form asp-action="Delete" asp-route-id="@band.Id" method="post" class="delete-form">
                                            @Html.AntiForgeryToken()
                                            <button type="button"
                                                    class="btn btn-outline-danger btn-sm w-100 rounded-pill btn-delete-confirm"
                                                    data-title="Delete @band.Name?"
                                                    data-message="All rehearsals and setlists will be permanently deleted!">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 shadow-lg bg-dark-spotify text-white rounded-5 mt-4 border border-secondary border-opacity-10">
            <i class="fa fa-microphone-slash display-1 text-orange-red mb-3"></i>
            <h3 class="fw-bold">No bands found</h3>
            <p class="text-muted">Time to start a new project! Hit the button above.</p>
            @if (!string.IsNullOrEmpty(currentSearch))
            {
                <a asp-action="Index" class="btn btn-outline-light rounded-pill mt-2 px-4">View All Bands</a>
            }
        </div>
    }

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination shadow-lg rounded-pill overflow-hidden border-0">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-0 px-4 py-2"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@currentSearch">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link border-0 px-3 py-2 @(i == Model.CurrentPage ? "btn-gradient text-white" : "bg-dark text-white")"
                           asp-route-page="@i"
                           asp-route-searchTerm="@currentSearch">@i</a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-0 px-4 py-2"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@currentSearch">
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

<style>
    :root {
        --spotify-black: #191414;
        --orange-red: #FF4500;
        --gradient-main: linear-gradient(-45deg, #FF4500, #FF0000, #FF8C00, #191414);
    }

    .bg-dark-spotify {
        background-color: var(--spotify-black) !important;
    }

    .text-orange-red {
        color: var(--orange-red) !important;
    }

    .band-card {
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        border: 10px solid rgba(255, 255, 255, 0.05) !important;
        border-radius: 40px
    }

        .band-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 15px rgba(255, 69, 0, 0.1) !important;
            border-color: rgba(255, 69, 0, 0.2) !important;
        }

    .band-image {
        height: 220px;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .band-card:hover .band-image {
        transform: scale(1.1);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 50%, var(--spotify-black));
        z-index: 1;
    }

    .btn-gradient {
        background: var(--gradient-main);
        background-size: 300% 300%;
        color: white !important;
        border: none;
        animation: gradientShift 10s ease infinite;
    }

    .rehearsal-item-dark {
        background-color: rgba(255,255,255,0.03);
        margin-bottom: 2px;
    }

        .rehearsal-item-dark:hover {
            background-color: rgba(255,255,255,0.08);
            transform: translateX(8px);
        }

    .date-badge-dark {
        background-color: rgba(0,0,0,0.4);
        min-width: 55px;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .border-dashed {
        border: 2px dashed rgba(255,255,255,0.15) !important;
        background-color: rgba(255,255,255,0.02);
    }

    .small-caps {
        font-variant: small-caps;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .pagination .page-link:hover {
        background-color: var(--orange-red) !important;
        color: white !important;
    }
</style>