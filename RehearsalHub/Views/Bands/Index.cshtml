@using RehearsalHub.Web.ViewModels.Bands
@using RehearsalHub.Web.ViewModels.Shared
@model PagedResult<BandIndexViewModel>

@{
    ViewData["Title"] = "My Bands";
    string? currentSearch = ViewData["CurrentSearch"]?.ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-4">
        <div>
            <h1 class="display-5 fw-bold text-dark mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Manage your musical projects and upcoming rehearsals</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-circle-fill me-2"></i>Add Band
        </a>
    </div>

    <partial name="_SearchPartial" />

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var band in Model.Items)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0 band-card transition-3d overflow-hidden">
                        <div class="position-relative">
                            <img src="@(string.IsNullOrEmpty(band.ImageUrl) ? "/images/no-image.png" : band.ImageUrl)"
                                 class="card-img-top" style="height: 200px; object-fit: cover;" alt="@band.Name">

                            @if (band.IsOwner)
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-3 shadow-sm px-3 py-2 rounded-pill fw-bold">
                                    <i class="bi bi-star-fill me-1"></i> OWNER
                                </span>
                            }
                            <div class="position-absolute bottom-0 start-0 m-3">
                                <span class="badge bg-dark bg-opacity-75 px-3 py-2 rounded-pill shadow-sm">@band.Genre</span>
                            </div>
                        </div>

                        <div class="card-body p-4">
                            <h4 class="card-title fw-bold text-dark mb-3">@band.Name</h4>

                            <div class="d-flex gap-3 mb-4 small text-muted border-bottom pb-3">
                                <span><i class="bi bi-people-fill me-1"></i> @band.MembersCount Members</span>
                                <span><i class="bi bi-calendar-event me-1"></i> @band.UpcomingRehearsals.Count() Sessions</span>
                            </div>

                            <div class="rehearsal-section">
                                <h6 class="text-uppercase fw-bold text-muted mb-3" style="font-size: 0.7rem; letter-spacing: 1.2px;">Next Rehearsals</h6>

                                @if (band.UpcomingRehearsals.Any())
                                {
                                    <div class="list-group list-group-flush gap-2">
                                        @foreach (var reh in band.UpcomingRehearsals)
                                        {
                                            <a asp-controller="Rehearsals" asp-action="Details" asp-route-id="@reh.Id"
                                               class="list-group-item list-group-item-action border-0 rounded-3 rehearsal-item p-2">
                                                <div class="d-flex align-items-center">
                                                    <div class="date-badge text-center me-3 py-1 rounded-3 shadow-sm">
                                                        <span class="d-block fw-bold text-primary fs-5 lh-1">@reh.Start.ToString("dd")</span>
                                                        <span class="d-block text-uppercase text-muted" style="font-size: 0.6rem;">@reh.Start.ToString("MMM")</span>
                                                    </div>
                                                    <div class="flex-grow-1 overflow-hidden">
                                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                                            <span class="fw-bold text-dark small">@reh.Start.ToString("HH:mm") — @reh.End.ToString("HH:mm")</span>
                                                            <span class="badge bg-white text-muted border border-1" style="font-size: 0.65rem;">@reh.DurationText</span>
                                                        </div>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div class="text-muted small">@reh.Start.ToString("dddd")</div>
                                                            @if (!string.IsNullOrEmpty(reh.SetlistName))
                                                            {
                                                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill border-0 px-2" style="font-size: 0.65rem;">
                                                                    <i class="bi bi-music-note-list me-1"></i>@reh.SetlistName
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4 bg-light rounded-3 border border-dashed">
                                        <i class="bi bi-calendar-x text-muted fs-3 d-block mb-2"></i>
                                        <span class="text-muted small">No upcoming sessions</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-4 pt-0">
                            <div class="row g-2">
                                <div class="col-12">
                                    <a asp-action="Details" asp-route-id="@band.Id" class="btn btn-primary w-100 fw-bold py-2 rounded-pill shadow-sm">
                                        Manage Band
                                    </a>
                                </div>
                                @if (band.IsOwner)
                                {
                                    <div class="col-6">
                                        <a asp-action="Edit" asp-controller="Bands" asp-route-id="@band.Id" class="btn btn-outline-secondary btn-sm w-100 rounded-pill">Edit</a>
                                    </div>
                                    <div class="col-6">
                                        <form asp-action="Delete" asp-route-id="@band.Id" method="post" class="delete-form">
                                            @Html.AntiForgeryToken()
                                            <button type="button"
                                                    class="btn btn-outline-danger btn-sm w-100 rounded-pill btn-delete-confirm"
                                                    data-title="Delete @band.Name?"
                                                    data-message="All rehearsals and setlists will be permanently deleted!">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 shadow-sm bg-light rounded-4 mt-4">
            <i class="bi bi-search-heart text-muted display-1"></i>
            <h3 class="mt-3 fw-bold">No bands found</h3>
            <p class="text-muted">Try a different search term or create a new band.</p>
            @if (!string.IsNullOrEmpty(currentSearch))
            {
                <a asp-action="Index" class="btn btn-outline-primary rounded-pill mt-2">View All Bands</a>
            }
        </div>
    }

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination shadow-sm rounded-pill overflow-hidden border-0 bg-white">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link border-0 px-4 py-2"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@currentSearch">
                        <i class="bi bi-chevron-left me-1"></i> Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link border-0 px-3 py-2"
                           asp-route-page="@i"
                           asp-route-searchTerm="@currentSearch">@i</a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link border-0 px-4 py-2"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@currentSearch">
                        Next <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/bands-index.css" asp-append-version="true" />
}