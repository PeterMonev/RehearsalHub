@using RehearsalHub.Web.ViewModels
@using RehearsalHub.Web.ViewModels.Bands
@model PagedResult<BandIndexViewModel>

@{
    ViewData["Title"] = "My Bands";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> + Create New Band
    </a>
</div>

<hr />

@if (!Model.Items.Any())
{
    <div class="alert alert-info text-center shadow-sm" role="alert">
        <h4 class="alert-heading">No bands found!</h4>
        <p>You haven't created or joined any bands yet.</p>
        <hr>
        <a asp-action="Create" class="btn btn-outline-info">Start your first band now</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var band in Model.Items)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100 shadow-sm border-0 transition-hover position-relative">

                    @* ТУК ДОБАВЯМЕ ЗНАЧКАТА ВЪРХУ КАРТАТА *@
                    @if (band.IsOwner)
                    {
                        <span class="badge bg-warning text-dark position-absolute m-2 shadow-sm"
                              style="top: 0; right: 0; z-index: 10; font-size: 0.85rem;">
                            <i class="bi bi-star-fill"></i> Owner
                        </span>
                    }

                    @if (!string.IsNullOrEmpty(band.ImageUrl))
                    {
                        <img src="@band.ImageUrl" class="card-img-top" alt="@band.Name"
                             style="height: 220px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/defaults/no-image.png" class="card-img-top" alt="No image available"
                             style="height: 220px; object-fit: cover;">
                    }

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@band.Name</h5>
                            <span class="badge rounded-pill bg-info text-dark">@band.Genre</span>
                        </div>

                        <p class="card-text">
                            <small class="text-muted">
                                <i class="bi bi-people-fill"></i> Members: @band.MembersCount
                            </small>
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-top-0 pb-3">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@band.Id" class="btn btn-outline-primary btn-sm">Details</a>
                            @if (band.IsOwner)
                            {
                                <div class="btn-group w-100 mt-1">
                                    <a asp-action="Edit" asp-route-id="@band.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@band.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Band navigation" class="mt-5">
            <ul class="pagination justify-content-center shadow-sm">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo; Previous</span>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">Next &raquo;</span>
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted mt-2">
                <small>Showing page @Model.CurrentPage of @Model.TotalPages (Total @Model.TotalItems bands)</small>
            </p>
        </nav>
    }
}

@section Styles {
    <style>
        .transition-hover:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease-in-out;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>
}