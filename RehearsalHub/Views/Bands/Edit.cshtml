@using RehearsalHub.Data.Models.Enums
@model RehearsalHub.Web.ViewModels.Bands.BandEditViewModel

@{
    ViewData["Title"] = "Manage Project";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">
            <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-4 bg-dark d-flex align-items-center justify-content-center p-5 text-center" style="min-height: 450px;">
                        <div class="w-100">
                            <div class="mb-4">
                                <i class="bi bi-guitar-fill text-primary" style="font-size: 4.5rem;"></i>
                            </div>
                            <h2 class="text-white fw-bold mb-3">Edit Band</h2>
                            <p class="text-secondary mb-4 px-3">Keep your profile fresh.</p>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-2 p-2 bg-secondary bg-opacity-10 rounded-3">
                                    <img src="@Model.ImageUrl" id="preview" class="img-fluid rounded shadow-sm border border-secondary" 
                                         style="max-height: 180px; width: 100%; object-fit: cover;" 
                                         onerror="this.src='https://via.placeholder.com/300x200?text=Invalid+URL'"/>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-8 p-4 p-md-5 bg-white">
                        <div class="mb-4 pb-2 border-bottom">
                            <h4 class="text-dark fw-bold mb-1">General Settings</h4>
                        </div>

                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="row g-4">
                                <div class="col-12">
                                    <label asp-for="Name" class="form-label fw-bold small mb-1">BAND NAME</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-primary border-end-0"><i class="bi bi-music-note-list"></i></span>
                                        <input asp-for="Name" class="form-control bg-light border-start-0 py-2" style="padding-left: 10px;" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small d-block mt-1"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Genre" class="form-label fw-bold small mb-1">GENRE</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-primary border-end-0"><i class="bi bi-vinyl-fill"></i></span>
                                        <select asp-for="Genre" class="form-select bg-light border-start-0 py-2" asp-items="Html.GetEnumSelectList<MusicGenre>()">
                                            <option value="">Select...</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Genre" class="text-danger small d-block mt-1"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ImageUrl" class="form-label fw-bold small mb-1">COVER URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-primary border-end-0"><i class="bi bi-link-45deg"></i></span>
                                        <input asp-for="ImageUrl" id="imageUrlInput" class="form-control bg-light border-start-0 py-2" />
                                    </div>
                                    <span asp-validation-for="ImageUrl" class="text-danger small d-block mt-1"></span>
                                </div>

                                <div class="col-12 mt-5 pt-3 border-top">
                                    <div class="d-flex gap-3">
                                        <button type="submit" class="btn btn-primary px-5 fw-bold">Save Changes</button>
                                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}