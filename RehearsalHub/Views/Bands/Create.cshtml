@using RehearsalHub.Data.Models.Enums
@model BandInputModel

@{
    ViewData["Title"] = "Create Your Band";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">

            <div class="text-center mb-5">
                <div class="display-1 mb-2">🎸</div>
                <h1 class="display-5 fw-bold text-dark">@ViewData["Title"]</h1>
                <p class="lead text-muted col-lg-8 mx-auto">
                    Take the first step towards harmony. Create your group and start jamming!
                </p>
            </div>

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post" autocomplete="off" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-12">
                                <label asp-for="Name" class="form-label fw-bold text-dark mb-1">Band Name</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-people text-primary"></i></span>
                                    <input asp-for="Name" class="form-control bg-light border-0 py-3" placeholder="e.g. The Rockers" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small ps-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Genre" class="form-label fw-bold text-dark mb-1">Genre</label>
                                <select asp-for="Genre" class="form-select form-select-lg bg-light border-0" asp-items="Html.GetEnumSelectList<MusicGenre>()">
                                    <option value="">Select Genre...</option>
                                </select>
                                <span asp-validation-for="Genre" class="text-danger small ps-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SelectedInstrument" class="form-label fw-bold text-dark mb-1">Your Instrument</label>
                                <select asp-for="SelectedInstrument" class="form-select form-select-lg bg-light border-0" asp-items="Html.GetEnumSelectList<InstrumentType>()">
                                    <option value="">Select...</option>
                                </select>
                                <span asp-validation-for="SelectedInstrument" class="text-danger small ps-1"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageUrl" class="form-label fw-bold text-dark mb-1">Band Image URL</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-image text-primary"></i></span>
                                    <input asp-for="ImageUrl" class="form-control bg-light border-0 py-3" placeholder="https://..." />
                                </div>
                                <span asp-validation-for="ImageUrl" class="text-danger small ps-1"></span>
                            </div>

                            <div class="col-12 mt-5">
                                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-bold py-3 shadow-sm scale-hover">
                                    <i class="bi bi-rocket-takeoff me-2"></i>Create Band
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i>Back to My Bands
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}