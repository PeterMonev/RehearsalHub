@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container py-5 mt-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="glass-card p-4 p-md-5 shadow-lg border-0 bg-white rounded-4 shadow-danger-sm">
                <div class="text-center mb-4">
                    <div class="logo-icon bg-danger text-white rounded-circle d-inline-block p-3 mb-3 shadow-danger">
                        <i class="fa-solid fa-key fs-2"></i>
                    </div>
                    <h2 class="fw-black tracking-tight text-dark text-uppercase">Forgot <span class="text-danger">Password</span>?</h2>
                    <p class="text-muted small">Enter your email and we'll send you a link to reset your password.</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control border-0 bg-light rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">Email address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-danger rounded-pill fw-bold shadow-danger py-3">
                        SEND RESET LINK 🤘
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">
                        Back to
                        <a asp-page="./Login" class="text-danger fw-bold text-decoration-none border-bottom border-danger">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}