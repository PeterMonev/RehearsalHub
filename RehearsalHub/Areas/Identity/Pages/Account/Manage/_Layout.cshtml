@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container py-5 mt-lg-4 animate-fade-in">
    <div class="row mb-5">
        <div class="col-12 border-start border-danger border-5 ps-4">
            <h1 class="display-5 fw-black text-uppercase tracking-tighter mb-0">
                Account <span class="text-danger">Settings</span>
            </h1>
            <p class="text-muted lead fs-6">Manage your profile, email, and security preferences.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4 col-lg-3">
            <div class="glass-card p-3 shadow-lg border-0 rounded-4 bg-white sticky-top" style="top: 100px; z-index: 10;">
                <div class="px-3 py-2 mb-3 border-bottom border-light">
                    <span class="text-uppercase small fw-bold text-muted tracking-widest">Menu</span>
                </div>
                <partial name="_ManageNav" />
            </div>
        </div>

        <div class="col-md-8 col-lg-9">
            <div class="glass-card p-4 p-md-5 shadow-lg border-0 rounded-4 bg-white min-vh-50 border-top border-danger border-5">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-50 {
        min-height: 50vh;
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .border-start {
            border-left: none !important;
            border-bottom: 5px solid #e63946;
            padding-left: 0 !important;
            padding-bottom: 15px;
        }
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}