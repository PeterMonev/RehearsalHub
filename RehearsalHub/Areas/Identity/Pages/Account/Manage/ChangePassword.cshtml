@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row animate-fade-in">
    <div class="col-md-10 col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center shadow-danger me-3" style="width: 50px; height: 50px;">
                <i class="fa-solid fa-shield-halved fs-4"></i>
            </div>
            <div>
                <h3 class="fw-black text-uppercase tracking-tight mb-0">Security <span class="text-danger">Update</span></h3>
                <p class="text-muted small mb-0">Change your password to keep your account safe.</p>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control border-0 bg-light rounded-3 shadow-sm" autocomplete="current-password" aria-required="true" placeholder="Old Password" />
                <label asp-for="Input.OldPassword" class="text-muted">Current Password</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <hr class="my-4 opacity-25">

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control border-0 bg-light rounded-3 shadow-sm" autocomplete="new-password" aria-required="true" placeholder="New Password" />
                <label asp-for="Input.NewPassword" class="text-muted">New Password</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control border-0 bg-light rounded-3 shadow-sm" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm New Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-flex align-items-center gap-3">
                <button type="submit" class="btn btn-danger rounded-pill px-5 fw-bold shadow-danger py-2 transition-all">
                    UPDATE PASSWORD 🤘
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}