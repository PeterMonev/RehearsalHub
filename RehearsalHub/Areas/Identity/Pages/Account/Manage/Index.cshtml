@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row animate-fade-in">
    <div class="col-md-10 col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center shadow-danger me-3" style="width: 50px; height: 50px;">
                <i class="fa-solid fa-user-gear fs-4"></i>
            </div>
            <div>
                <h3 class="fw-black text-uppercase tracking-tight mb-0">General <span class="text-danger">Info</span></h3>
                <p class="text-muted small mb-0">Update your basic account details.</p>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="profile-form" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control border-0 bg-light rounded-3 text-muted" placeholder="Username" disabled />
                <label asp-for="Username" class="text-muted">Username (Permanent)</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Phone number" />
                <label asp-for="Input.PhoneNumber" class="text-muted">Contact Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="d-flex align-items-center gap-3">
                <button id="update-profile-button" type="submit" class="btn btn-danger rounded-pill px-5 fw-bold shadow-danger py-2 transition-all">
                    SAVE CHANGES 🤘
                </button>
                <span class="text-muted small d-none d-md-inline">Your data is secured.</span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}