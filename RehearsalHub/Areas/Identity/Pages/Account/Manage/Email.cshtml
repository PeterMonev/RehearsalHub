@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="row animate-fade-in">
    <div class="col-md-10 col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center shadow-danger me-3" style="width: 50px; height: 50px;">
                <i class="fa-solid fa-envelope-open-text fs-4"></i>
            </div>
            <div>
                <h3 class="fw-black text-uppercase tracking-tight mb-0">Email <span class="text-danger">Address</span></h3>
                <p class="text-muted small mb-0">Manage your contact information and verification.</p>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="email-form" method="post" class="mt-4">
            <div asp-validation-summary="All" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3 input-group">
                <input asp-for="Email" class="form-control border-0 bg-light rounded-start-3" placeholder="Please enter your email." disabled />
                @if (Model.IsEmailConfirmed)
                {
                    <span class="input-group-text border-0 bg-light text-success rounded-end-3" title="Verified">
                        <i class="fa-solid fa-circle-check fs-5"></i>
                    </span>
                }
                <label asp-for="Email" class="text-muted">Current Email</label>
            </div>

            @if (!Model.IsEmailConfirmed)
            {
                <div class="mb-4">
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link text-danger p-0 small fw-bold text-decoration-none">
                        <i class="fa-solid fa-paper-plane me-1"></i> Send verification email
                    </button>
                </div>
            }

            <div class="form-floating mb-4">
                <input asp-for="Input.NewEmail" class="form-control border-0 bg-light rounded-3 shadow-sm" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <label asp-for="Input.NewEmail" class="text-muted">New Email Address</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
            </div>

            <div class="d-flex align-items-center gap-3">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-danger rounded-pill px-5 fw-bold shadow-danger py-2 transition-all">
                    CHANGE EMAIL 🤘
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}