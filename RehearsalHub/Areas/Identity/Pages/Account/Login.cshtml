@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="container py-5 mt-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="glass-card p-4 p-md-5 shadow-lg border-0 bg-white rounded-4 shadow-danger-sm">
                <div class="text-center mb-4">
                    <div class="logo-icon bg-danger text-white rounded-3 d-inline-block px-3 py-2 mb-3">
                        <i class="fa-solid fa-guitar fs-2"></i>
                    </div>
                    <h2 class="fw-black tracking-tight text-dark text-uppercase">Welcome <span class="text-danger">Back</span></h2>
                    <p class="text-muted small">Ready to hit the stage?</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control border-0 bg-light rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">Email address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control border-0 bg-light rounded-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-muted">Password</label>
                        <span asp-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="checkbox mb-3 d-flex justify-content-between">
                        <label asp-for="Input.RememberMe" class="form-label small text-muted">
                            <input class="form-check-input me-1" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-danger small text-decoration-none">Forgot?</a>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-danger rounded-pill fw-bold shadow-danger py-3">
                        LOG IN 🤘
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-danger fw-bold text-decoration-none border-bottom border-danger">Sign Up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
