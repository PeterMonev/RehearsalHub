@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5 mt-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card p-4 p-md-5 shadow-lg border-0 bg-dark text-white rounded-4 border-bottom border-danger border-4">
                <div class="text-center mb-4">
                    <div class="logo-icon bg-danger text-white rounded-3 d-inline-block px-3 py-2 mb-3 shadow-danger">
                        <i class="fa-solid fa-drum fs-2"></i>
                    </div>
                    <h2 class="fw-black tracking-tight text-white text-uppercase">Join the <span class="text-danger">Hub</span></h2>
                    <p class="opacity-75 small">Set up your profile and start leading your band.</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center" role="alert"></div>

                    <div class="form-floating mb-3 text-dark">
                        <input asp-for="Input.Email" class="form-control border-0 rounded-3 shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email Address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3 text-dark">
                        <input asp-for="Input.Password" class="form-control border-0 rounded-3 shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4 text-dark">
                        <input asp-for="Input.ConfirmPassword" class="form-control border-0 rounded-3 shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-danger rounded-pill fw-bold shadow-danger py-3 mb-3">
                        GET STARTED 🎸
                    </button>
                </form>

                <div class="text-center mt-4 pt-3 border-top border-secondary border-opacity-25">
                    <p class="small opacity-75 mb-0">
                        Already a member?
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-danger fw-bold text-decoration-none hover-red transition-all">Log In here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}